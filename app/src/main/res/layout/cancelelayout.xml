<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal">
        <code.view.CustomTextView
            android:gravity="center"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Supplier"
            android:id="@+id/suplier"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <code.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:text="Femina Beuty"
            android:id="@+id/buity"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:elevation="@dimen/_4sdp"
        android:layout_height="@dimen/_150sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivproductImage"
                android:layout_width="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_height="@dimen/_130sdp"/>
            <TextView
                android:id="@+id/order"
                android:layout_width="match_parent"
                android:background="#10b468"
                android:text="@string/Ordered"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingTop="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toRightOf="@+id/ivproductImage"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:id="@+id/tvnameee"
                android:layout_below="@+id/order"
                android:layout_toRightOf="@+id/ivproductImage"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Alluring Women's Tops"
                android:textColor="@color/black"
                android:lines="1"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvproductprice"
                android:layout_below="@+id/tvnameee"
                android:layout_toRightOf="@+id/ivproductImage"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="569"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvsize"
                android:layout_below="@+id/tvnameee"
                android:layout_toRightOf="@+id/tvproductprice"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="size"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@+id/tvnameee"
                android:layout_toRightOf="@+id/tvsize"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="l"
                android:id="@+id/tvsizee"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvqty"
                android:layout_below="@+id/tvnameee"
                android:layout_toRightOf="@+id/tvsizee"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="qty"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvqtyy"
                android:layout_below="@+id/tvnameee"
                android:layout_toRightOf="@+id/tvqty"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="1"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvcancel"
                android:layout_below="@+id/tvproductprice"
                android:layout_toRightOf="@+id/ivproductImage"
                android:layout_width="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="CANCEL"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="#FB0073"
                android:background="@drawable/selectsizebackground"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:layout_below="@+id/tvproductprice"
                android:layout_toRightOf="@+id/tvcancel"
                android:layout_width="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="TRACK"
                android:elevation="@dimen/_4sdp"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_gradient_pink"
                android:layout_height="@dimen/_30sdp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>