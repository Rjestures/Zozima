            <TextView
                android:id="@+id/tvproductprice"
                android:layout_below="@+id/tvnameee"
                android:layout_toRightOf="@+id/ivproductImage"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="569"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvsize"
                android:layout_below="@+id/tvnameee"
                android:layout_toRightOf="@+id/tvproductprice"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text=""
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@+id/tvnameee"
                android:layout_toRightOf="@+id/tvsize"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="l"
                android:id="@+id/tvsizee"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvqty"
                android:layout_below="@+id/tvnameee"
                android:layout_toRightOf="@+id/tvsizee"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/qty"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvqtyy"
                android:layout_below="@+id/tvnameee"
                android:layout_toRightOf="@+id/tvqty"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="1"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvcancel"
                android:layout_below="@+id/tvproductprice"
                android:layout_toRightOf="@+id/ivproductImage"
                android:layout_width="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/Cancele"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="#FB0073"
                android:background="@drawable/selectsizebackground"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:id="@+id/tvTrack"
                android:layout_below="@+id/tvproductprice"
                android:layout_toRightOf="@+id/tvcancel"
                android:layout_width="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/track"
                android:elevation="@dimen/_4sdp"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_gradient_pink"
                android:layout_height="@dimen/_30sdp"/>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>