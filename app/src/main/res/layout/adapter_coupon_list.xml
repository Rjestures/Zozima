<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCouponCode"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="Copoun"
                android:textAlignment="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:background="@drawable/dot_dash"
                android:paddingTop="@dimen/_12sdp"
               />

            <TextView
                android:id="@+id/tvDiscValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/applycoupon"
                android:layout_marginTop="@dimen/_16sdp"
                android:textColor="@color/grey"
                android:textSize="@dimen/_13sdp"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/_160sdp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tvremove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/red"
                android:textSize="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_180sdp"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titke"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_60sdp"/>


        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>

